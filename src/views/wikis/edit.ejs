<!DOCTYPE html>

<head>
  <% include ../static/partials/head.ejs %>
</head>

<body>

  <div id="layout">
    <% include ../static/partials/navbar.ejs %>
    <div class="pure-g">
    <div class="pure-u-1">
      <div class="title-bar-left"></div>
        <div class="sign-up-form">
          <h1>Edit <%= wiki.title %> Wiki</h1>
          <h2>Update Information</h2>
          <p>Add to the <%= wiki.title %> Wiki by sharing your knowledge and experiences with others. </p>
          <div>
            <% include ../static/partials/messages.ejs %>
            <form method="POST" action="/wikis/<%= wiki.id %>/update" class="pure-form">
              <label for="title">Title and Photo URLs</label>
              <fieldset class="pure-group">
                <input type="text" name="title" value="<%= wiki.title %>" placeholder="Enter Wiki Title" class="pure-input-2-3" />
                <input type="text" name="image1" value="<%= wiki.image1 %>" placeholder="Enter Main Picture URL" class="pure-input-2-3"/>
                <input type="text" name="image2" value="<%= wiki.image2 %>" placeholder="Enter Side Picture URL" class="pure-input-2-3"/>
              </fieldset>
              <label for="body">Main Wiki Information</label>
              <fieldset class="pure-group">
                <textarea class="pure-input-2-3" name="body" rows="20"><%= wiki.body %></textarea>
              </fieldset>
              <label for="fastFacts">Fast Fact Information</label>
              <fieldset class="pure-group">
                <textarea class="pure-input-2-3" name="fastFacts" rows="10"><%= wiki.fastFacts %></textarea>
              </fieldset>
                <% if (currentUser.role != 0) { %>
                  <label for="private">Choose Wiki Privacy</label>
                    <select class="pure-input-2-3" name="private">
                      <% if (wiki.private) { %>
                        <option value="true">Private Wiki</option>
                        <option value="false">Public Wiki</option>
                      <% } else { %>
                        <option value="false">Public Wiki</option>
                        <option value="true">Private Wiki</option>
                      <% } %>
                    </select>
                <% } %>
              <button type="submit"class="pure-button pure-input-2-3 pure-button-primary">Edit Wiki</button>
            </form>
          </div>
          <div class="form-bottom-links">
            <a href="#">See our guide on how to create a great wiki</a>
          </div>
          <% include ../static/partials/wiki_guide.ejs %>
        </div>
      </div>
    </div>
  </div>
  <% include ../static/partials/bodyscripts.ejs %>
</body>
